<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageViewHeartIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/heart_image"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"/>

    <ImageView
        android:id="@+id/imageViewProduct"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/textViewProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageViewProduct"
        android:text="Nombre del producto"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewProductName"
        android:text="Precio: $XX.XX"
        android:paddingLeft="10dp"
        android:textSize="16sp"
        android:textColor="#009900"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/imageViewProduct"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:layout_below="@id/textViewPrice"
        android:layout_toEndOf="@id/imageViewProduct"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/location_icon"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lugar de venta:"
            android:textSize="16sp"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonReserve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_reserver"
        android:textStyle="italic"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/yellow"
        android:layout_below="@id/imageViewProduct"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
       />

</RelativeLayout>

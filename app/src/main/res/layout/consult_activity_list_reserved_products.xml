<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"

    tools:context=".ui.view.fragment.ConsultActivityListReservedProducts">

    <TextView
        android:id="@+id/textViewReservedProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Productos Apartados"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="@color/black"/>

    <ListView
        android:id="@+id/listViewBookedProducts"
        android:layout_width="match_parent"
        android:paddingTop="25dp"
        android:layout_below="@id/textViewReservedProducts"
        android:layout_height="wrap_content"/>
</RelativeLayout>
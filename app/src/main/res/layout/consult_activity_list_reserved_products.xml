<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".ui.view.fragment.ConsultActivityListReservedProducts">

    <TextView
        android:id="@+id/textViewReservedProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tus Productos Apartados"
        android:textSize="20sp"
        android:textColor="#808080"
        android:textStyle="bold"
        android:padding="16dp"/>

    <ListView
        android:id="@+id/listViewBookedProducts"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:layout_below="@id/textViewReservedProducts"
        android:layout_height="wrap_content"/>
</RelativeLayout>
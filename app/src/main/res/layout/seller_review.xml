<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageViewBuyer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/buyer_image_placeholder"
        android:background="@drawable/circle_background"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/textViewBuyerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del Comprador"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_toEndOf="@id/imageViewBuyer"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/textViewReviewContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contenido de la reseÃ±a"
        android:textSize="12sp"
        android:textColor="#333333"
        android:layout_below="@id/textViewBuyerName"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/imageViewBuyer"/>

</RelativeLayout>

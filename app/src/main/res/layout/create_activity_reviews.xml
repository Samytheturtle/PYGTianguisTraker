<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.view.CreateReviews">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deja tu reseña"
        android:textSize="24sp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"/>


    <TextView
        android:id="@+id/textViewSellerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="Vendedor: Juan Perez Ochoa "
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_below="@id/textViewTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/imageViewSeller"
        android:layout_width="156dp"
        android:layout_height="138dp"
        android:layout_below="@id/textViewSellerName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/seller_icon"
        android:elevation="4dp"
        android:padding="4dp"
        android:src="@drawable/seller_image_placeholder" />

    <EditText
        android:id="@+id/editTextReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribe tu reseña aquí"
        android:layout_below="@id/imageViewSeller"
        android:layout_marginTop="16dp"
        android:background="#F5F5F5"
        android:padding="12dp"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:minLines="6" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar reseña"
        android:layout_below="@id/editTextReview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"

        android:textColor="#FFFFFF"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"/>

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:layout_below="@id/buttonSubmit"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="16dp"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp" />
</RelativeLayout>